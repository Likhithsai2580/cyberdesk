# Configuration for local development
# Copy this file to .env and fill in your values

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Kubernetes configuration
# Only needed if the operator is not running inside the cluster with a service account
# KUBECONFIG=/path/to/your/kubeconfig

# Pod and namespace configuration
POD_NAME=local-development
KOPF_NAMESPACE=cyberdesk-system

# Kopf leader election settings
KOPF_PEERING=cyberdesk-operator

# Health check endpoint
KOPF_LIVENESS_ENDPOINT=http://0.0.0.0:8080/healthz

# VM timeout configurations (in milliseconds)
DEFAULT_VM_TIMEOUT_MS=3600000  # 1 hour

# Default namespace to watch if not specified
# NAMESPACE=default 